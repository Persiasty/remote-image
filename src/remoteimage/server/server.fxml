<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.ListView?>
<?import java.net.URL?>
<BorderPane styleClass="dark" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="remoteimage.server.Controller">

    <top>
        <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
            <Menu mnemonicParsing="false">
                <graphic><Label onMouseClicked="#fullScreen" text="Full Screen" /></graphic>
            </Menu>
            <Menu mnemonicParsing="false">
                <graphic><Label onMouseClicked="#showInfo" text="Info" /></graphic>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <ImageView fx:id="image" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
    </center>
    <right>
        <ListView fx:id="imgsList" prefWidth="150"/>
    </right>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</BorderPane>
