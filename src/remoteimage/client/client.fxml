<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<BorderPane fx:id="borderPane" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121"
            fx:controller="remoteimage.client.Controller">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu mnemonicParsing="false">
                <graphic>
                    <Label text="Set Client IP" onMouseClicked="#setIp"/>
                </graphic>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <Label styleClass="dropout" text="Drop Here"
               BorderPane.alignment="CENTER" fx:id="dropArea">
            <font>
                <Font name="Comic Sans MS" size="48.0"/>
            </font>
            <BorderPane.margin>
                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
            </BorderPane.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </Label>
    </center>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</BorderPane>
